@using VapeShop.Web.Requests.Users;

@model LoginUserRequest;

@{

}

<link rel="stylesheet" href="~/css/login.css">

<a class="closeModal" asp-action="Index" asp-controller="Home"></a>

<div class="container" style="display: block">
    <h1>Авторизация</h1>
   
    <form asp-action="LoginStep2">
        <input type="hidden" name="Id" value="@Model.Id">
        <p>
            <input type="text" asp-for="Code" placeholder="Код из смс" name="Code" />
            <span asp-validation-for="Code" />
        </p>

        <input type="submit" value="Авторизоваться" class="submit-btn">

    </form>

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
